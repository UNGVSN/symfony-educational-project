{
    "name": "framework-rebuild/04-controllers",
    "description": "Chapter 04: Controllers - Resolving and executing controllers",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "symfony/http-foundation": "^7.0",
        "symfony/routing": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
