{% extends 'base.html.twig' %}

{% block title %}Blog - My Framework App{% endblock %}

{% block body %}
<h1 style="font-size: 2.5rem; margin-bottom: 2rem;">Blog Posts</h1>

<div style="display: grid; gap: 2rem;">
    {% for post in posts %}
    <article style="border-bottom: 1px solid #ecf0f1; padding-bottom: 2rem;">
        <h2 style="font-size: 1.75rem; margin-bottom: 0.5rem;">
            <a href="/blog/{{ post.id }}" style="color: #2c3e50; text-decoration: none;">
                {{ post.title }}
            </a>
        </h2>
        
        <div class="meta">
            <span>By {{ post.author }}</span> | 
            <span>{{ post.createdAt|date('F j, Y') }}</span>
        </div>

        <p style="color: #555; line-height: 1.8;">
            {{ post.excerpt }}
        </p>

        <a href="/blog/{{ post.id }}" 
           style="color: #3498db; text-decoration: none; font-weight: 600; display: inline-block; margin-top: 0.5rem;">
            Read more â†’
        </a>
    </article>
    {% endfor %}
</div>

{% if posts is empty %}
<p style="text-align: center; color: #7f8c8d; padding: 3rem 0;">
    No blog posts found.
</p>
{% endif %}
{% endblock %}
