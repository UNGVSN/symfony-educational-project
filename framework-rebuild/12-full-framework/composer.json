{
    "name": "framework/full-framework",
    "description": "A complete web framework built from scratch - Educational project",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "symfony/http-foundation": "^7.0|^6.0",
        "symfony/routing": "^7.0|^6.0",
        "symfony/event-dispatcher": "^7.0|^6.0",
        "symfony/dependency-injection": "^7.0|^6.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "serve": "php -S localhost:8000 -t public/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
