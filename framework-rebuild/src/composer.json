{
    "name": "framework/core",
    "description": "A custom PHP framework built from scratch for educational purposes",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Framework Rebuild Project",
            "email": "learning@example.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Framework\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
